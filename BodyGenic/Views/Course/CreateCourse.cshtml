@using BodyGenic.Models
@model Course


@{
    ViewBag.Title = "CreateCourse";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

<body>
    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <p class="h5 my-0 me-md-auto fw-normal">Body Genic</p>
        <nav class="my-2 my-md-0 me-md-3">
            <a class="p-2 text-dark" href="/Home/Index">Home</a>
            <a class="p-2 text-dark" href="/Profile/Index">Profile</a>
        </nav>
    </header>

    <div class="container">
        <main>
            <div class="py-5 text-center">

                <h2>Course form</h2>
                <p class="lead">
                    Below is an example form built entirely with Bootstrap’s form controls. Each required
                    form group has a validation state that can be triggered by attempting to submit the form without
                    completing it.
                </p>
            </div>

            <div class="row g-3">
                <div class="col-md-5 col-lg-4 order-md-last">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Your videos</span>
                        <span class="badge bg-secondary rounded-pill">3</span>
                    </h4>
                    <ul class="list-group mb-3">

                        <li class="list-group-item d-flex justify-content-between lh-sm">
                            <div>
                                <h6 class="my-0">First Video</h6>
                                <small class="text-muted">Brief description</small>
                            </div>
                            <span class="text-muted">00:00</span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between lh-sm">
                            <div>
                                <h6 class="my-0">Second Video</h6>
                                <small class="text-muted">Brief description</small>
                            </div>
                            <span class="text-muted">00:00</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between lh-sm">
                            <div>
                                <h6 class="my-0">Third Video</h6>
                                <small class="text-muted">Brief description</small>
                            </div>
                            <span class="text-muted">00:00</span>
                        </li>
                        <!-- <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">Promo code</h6>
                                <small>EXAMPLECODE</small>
                            </div>
                            <span class="text-success">−$5</span>
                        </li> -->
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total </span>
                            <strong>00:00</strong>
                        </li>
                    </ul>

                    <form class="card p-2">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Upload video">
                            <button type="submit" class="btn btn-success">Upload</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-7 col-lg-8">
                    <h4 class="mb-3">Course Info</h4>
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {

                        <form class="needs-validation" novalidate>
                            <div class="row g-3">

                                <div class="col-sm-12">
                                    <label for="courseName" class="form-label">Course name</label>
                                    @Html.TextBoxFor(model => model.CourseTitle, new { id = "courseName", @class = "form-control", Type = "text" })
                                </div>

                                <div class="col-12">
                                    <label for="description" class="form-label">Description</label>
                                    @Html.TextBoxFor(model => model.CourseDescription, new { id = "description", @class = "form-control", Type = "text" })
                                </div>


                                <div class="col-md-5">
                                    <label for="Type" class="form-label">Type</label>
                                    @Html.DropDownListFor(model => model.isPaid,
                                        new List<SelectListItem> {
                                       new SelectListItem { Value = "true" , Text = "Paid" },
                                       new SelectListItem { Value = "false" , Text = "Unpaid" }
                                    })
                                    <!--
        <select class="form-select" id="Type">
            <option value="">Choose...</option>
            <option>Unpaid</option>
            <option>Paid</option>
        </select>
        -->
                                </div>




                                <hr class="my-4">

                                <button id="createCourseBtn" type="submit" class="w-100 btn btn-lg btn-primary" name="Login" value="Log In" formaction="/Course/AddCourseToFirebase">Create Course</button>
                            </div>
                            </form>

                        }

                    </div>
                </div>
            </main>

            <footer class="my-5 pt-5 text-muted text-center text-small">
                <p class="mb-1">&copy; 2017–2020 Company Name</p>
                <ul class="list-inline">
                    <li class="list-inline-item"><a href="#">Privacy</a></li>
                    <li class="list-inline-item"><a href="#">Terms</a></li>
                    <li class="list-inline-item"><a href="#">Support</a></li>
                </ul>
            </footer>
        </div>

    </body>

